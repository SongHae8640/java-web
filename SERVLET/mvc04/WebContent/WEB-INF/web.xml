<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>mvc04</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet-mapping>
  	<servlet-name>bbsList</servlet-name>
  	<url-pattern>/bbs/list.bit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>bbsAdd</servlet-name>
  	<url-pattern>/bbs/add.bit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>bbsDetail</servlet-name>
  	<url-pattern>/bbs/detail.bit</url-pattern>
  </servlet-mapping>
  
  <!-- 서블릿 메핑과 서블릿 구분 -->
  
  <servlet>
  	<servlet-name>bbsList</servlet-name>
  	<servlet-class>com.bit.controller.ListController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>bbsAdd</servlet-name>
  	<servlet-class>com.bit.controller.AddController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>bbsDetail</servlet-name>
  	<servlet-class>com.bit.controller.DetailController</servlet-class>
  </servlet>
</web-app>